<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LongshoreFactor</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LongshoreFactor.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">The Longshore Factor</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Return to Start</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="https://ligmarine.com"  target="_blank">LIG Marine</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/LongshoreLinks">Longshore Links</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="mailto: ask@ligmarine.com">Contact Us</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    
        <div class="text-center d-flex align-items-end mt-4">
            <p>The Longshore Factor is sponsored by <a href="https://www.ligmarine.com" target="_blank">LIG Marine Managers Inc</a>, and is offered as a free service to insurance agents, brokers and insurers. Please use <a href="mailTo: ask@ligmarine.com">"Contact LIG Marine"</a> for questions, suggestions or comments about this web site. Last Modified: 01/05/24</p>
        </div>
    </div>

    <footer class="border-top footer text-center text-muted">
        <div class="container">
            &copy; 2024 - LongshoreFactor - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>